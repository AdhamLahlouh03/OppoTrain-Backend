# üöÄ OppoTrain Backend Production Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# üî• FIREBASE CONFIGURATION
# =============================================================================
# Get these values from your Firebase project settings
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# =============================================================================
# üåê SERVER CONFIGURATION
# =============================================================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# =============================================================================
# üîí SECURITY CONFIGURATION
# =============================================================================
# CORS settings - restrict in production
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT settings (if implementing authentication)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# =============================================================================
# üìä LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_FORMAT=combined

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# Firestore settings
FIRESTORE_IGNORE_UNDEFINED_PROPERTIES=true

# =============================================================================
# üöÄ PERFORMANCE CONFIGURATION
# =============================================================================
# API settings
API_TIMEOUT=30000
API_MAX_BODY_SIZE=10mb

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# =============================================================================
# üì± MONITORING CONFIGURATION
# =============================================================================
# Health check settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# üîê AUTHENTICATION (Future Implementation)
# =============================================================================
# Admin credentials (change these!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password_here

# =============================================================================
# üìß EMAIL CONFIGURATION (Future Implementation)
# =============================================================================
# SMTP settings for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# =============================================================================
# üåç EXTERNAL SERVICES
# =============================================================================
# Redis (if using caching)
REDIS_URL=redis://localhost:6379

# MongoDB (if using as alternative to Firestore)
MONGODB_URI=mongodb://localhost:27017/oppotrain

# =============================================================================
# üìä ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id_here

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# üö® ALERTS & NOTIFICATIONS
# =============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord webhook for alerts
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# =============================================================================
# üîÑ BACKUP & MAINTENANCE
# =============================================================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =============================================================================
# üê≥ DOCKER CONFIGURATION
# =============================================================================
# Docker settings
DOCKER_NETWORK=oppotrain-network
DOCKER_MEMORY_LIMIT=1G
DOCKER_CPU_LIMIT=1.0

# =============================================================================
# üìã DEPLOYMENT CONFIGURATION
# =============================================================================
# Deployment settings
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=us-central1
DEPLOYMENT_VERSION=1.0.0

# =============================================================================
# üö® CRITICAL: SECURITY CHECKLIST
# =============================================================================
# ‚úÖ Change all default passwords
# ‚úÖ Use strong, unique passwords
# ‚úÖ Enable 2FA where possible
# ‚úÖ Restrict CORS origins in production
# ‚úÖ Use HTTPS in production
