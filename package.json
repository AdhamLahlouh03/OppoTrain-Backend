{
  "name": "oppotrain-backend",
  "version": "1.0.0",
  "description": "Complete OppoTrain Backend API with Resources and Members Management",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "node test-members-api.js && node test-api.js",
    "test:members": "node test-members-api.js",
    "test:resources": "node test-api.js",
    "test:all": "npm run test:members && npm run test:resources",
    "build": "echo 'No build step required for Node.js'",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "monitor": "./monitor.sh",
    "backup": "./backup.sh",
    "logs": "sudo journalctl -u oppotrain-backend -f",
    "status": "sudo systemctl status oppotrain-backend.service",
    "restart": "sudo systemctl restart oppotrain-backend.service",
    "stop": "sudo systemctl stop oppotrain-backend.service",
    "start:service": "sudo systemctl start oppotrain-backend.service",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "docker:build": "docker build -t oppotrain-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env oppotrain-backend",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "oppotrain",
    "backend",
    "api",
    "firebase",
    "firestore",
    "members",
    "resources",
    "nodejs",
    "express",
    "rest-api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/oppotrain-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/oppotrain-backend/issues"
  },
  "homepage": "https://github.com/yourusername/oppotrain-backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "firebase": "^12.1.0",
    "axios": "^1.7.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "config": {
    "port": 3000,
    "environment": "production"
  }
}
